{
    "description": "Heat template to deploy kubernetes replication controllers and services to an existing host", 
    "heat_template_version": "2013-05-23", 
    "resources": {
        "ym-mysql-bs-rc": {
            "properties": {
                "apiversion": "v1", 
                "definition": {
                    "apiVersion": "v1", 
                    "kind": "ReplicationController", 
                    "metadata": {
                        "labels": {
                            "name": "ym-mysql-bs", 
                            "version": "latest"
                        }, 
                        "name": "ym-mysql-bs-latest", 
                        "namespace": "default"
                    }, 
                    "spec": {
                        "replicas": 1, 
                        "selector": {
                            "name": "ym-mysql-bs", 
                            "version": "latest"
                        }, 
                        "template": {
                            "metadata": {
                                "labels": {
                                    "name": "ym-mysql-bs", 
                                    "version": "latest"
                                }, 
                                "namespace": "default"
                            }, 
                            "spec": {
                                "containers": [
                                    {
                                        "env": [
                                            {
                                                "name": "LC_ALL", 
                                                "value": "en_US.UTF-8"
                                            }, 
                                            {
                                                "name": "LANG", 
                                                "value": "en_US.UTF-8"
                                            }, 
                                            {
                                                "name": "LANGUAGE", 
                                                "value": "en_US:en"
                                            }
                                        ], 
                                        "image": "xa.repo.ndp.com:5000/paas/ubuntu-sshd", 
                                        "name": "ym-mysql-bs", 
                                        "ports": [], 
                                        "resources": {
                                            "limits": {
                                                "memory": "1Gi"
                                            }
                                        }, 
                                        "volumeMounts": [
                                            {
                                                "mountPath": "/mnt/nfs", 
                                                "name": "nfs", 
                                                "readOnly": false
                                            }
                                        ]
                                    }
                                ], 
                                "volumes": [
                                    {
                                        "hostPath": {
                                            "path": "/mnt/nfs"
                                        }, 
                                        "name": "nfs"
                                    }
                                ]
                            }
                        }
                    }
                }, 
                "kubernetes_endpoint": "https://dev.k8s.paas.ndp.com:6443", 
                "namespace": "default", 
                "rolling_updates": {
                    "batch_percentage": 50, 
                    "pause_time": 5
                }, 
                "token": "myToken0"
            }, 
            "type": "GoogleInc::Kubernetes::ReplicationController"
        }
    }
}

